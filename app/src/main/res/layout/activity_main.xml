<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/bg"

    >


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:max="5"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progressDrawable="@drawable/dash_progressbar"
        ></ProgressBar>


    <TextView
        android:id="@+id/questionLabel"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:layout_width="370dp"
        android:layout_height="80dp"
        android:layout_marginTop="60dp"
        android:text="Qeustion"
        android:textSize="20dp"
        android:textColor="@color/textCol"
        android:background="@drawable/bgfortext"
        tools:ignore="RtlCompat" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        >

        <RadioButton
            android:id="@+id/radioButtonVar11"
            android:textAlignment="center"
            android:button="@null"
            android:layout_width="match_parent"
            android:layout_height="@dimen/answerBtn_height"
            android:text="Вариант 1"
            android:textSize="30dp"
            android:onClick="checkAnswer"
            android:background="@drawable/btn"
            android:layout_marginBottom="10dp"
            android:textColor="@color/textCol"
            />

        <RadioButton

            android:id="@+id/radioButtonVar12"
            android:textAlignment="center"
            android:button="@null"
            android:layout_width="match_parent"
            android:layout_height="@dimen/answerBtn_height"
            android:text="Вариант 2"
            android:textSize="30dp"
            android:onClick="checkAnswer"
            android:background="@drawable/btn"
            android:layout_marginBottom="10dp"
            android:textColor="@color/textCol"
            />

        <RadioButton
            android:id="@+id/radioButtonVar13"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/answerBtn_height"
            android:button="@null"
            android:onClick="checkAnswer"
            android:text="Вариант 3"
            android:textSize="30dp"
            android:background="@drawable/btn"
            android:textColor="@color/textCol"
            />

    </RadioGroup>
</LinearLayout>