<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="#FFDDAA"
    >

    <LinearLayout
        android:layout_marginTop="60dp"
        android:layout_width="370dp"
        android:layout_height="70mm"
        android:orientation="vertical"
        android:background="@drawable/bgforresult"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"
            android:text="Результат"
            android:textColor="@color/textCol"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/resultLabel"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="3 / 5"
            android:textColor="@color/textCol"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/physicsLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            android:gravity="center_vertical"
            android:text="Твой уровень в физике:"
            android:textAlignment="center"
            android:textColor="@color/textCol"
            android:textSize="23dp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/advice"
            android:layout_width="280dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:gravity="center_vertical"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/textCol"
            android:textSize="22dp"
            tools:ignore="RtlCompat" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"

        >

        <Button
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            android:background="@drawable/btn"
            android:onClick="returnTop"
            android:text="К началу"
            android:textColor="@color/textCol"
            android:textSize="18dp" />
    </LinearLayout>

</LinearLayout>